{
  "compilerOptions": {
    /* File Layout */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Module + Environment */
    "module": "commonjs",             // ✅ works perfectly with Express & ts-node-dev
    "target": "ES2020",
    "lib": ["ES2020"],
    "esModuleInterop": true,          // ✅ allows "import express from 'express'"
    "resolveJsonModule": true,

    /* Type Checking */
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": false,

    /* Output + Source Maps */
    "sourceMap": true,

    /* Node.js Environment */
    "types": ["node"],                // ✅ gives access to Node.js global types

    /* Misc */
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],                 // compile everything inside src/
  "exclude": ["node_modules", "dist"]
}
